<h1>New contact</h1>

<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{#each error in errors.name}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="name" class="form-control" value=name}}
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    {{#each error in errors.email}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="email" class="form-control" value=email}}
  </div>
  <div class="form-group">
    <label for="phone">Phone</label>
    {{#each error in errors.phone}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="phone" class="form-control" value=phone}}
  </div>

  <button {{action createContact}} class="btn btn-default">Create contact</button>
</form>

